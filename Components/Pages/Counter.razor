@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3">Counter</MudText>

<MudText Typo="Typo.body1">Current count: @currentCount</MudText>

<MudButton Class="my-4" Variant="Variant.Filled" Color="Color.Primary" OnClick="@IncrementCount" >Click Me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
